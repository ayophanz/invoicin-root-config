{
  "extends": "ts-config-single-spa",
  "compilerOptions": {
    "declarationDir": "dist",
    "isolatedModules": true,
    "composite": true,
    "module": "es2022",
    "moduleResolution": "Node",
    "emitDeclarationOnly": false
  },
  "include": ["src/env.d.ts", "vite.config.* --noEmit", "src/**/*"],
  "exclude": ["src/**/*.test*"]
}
